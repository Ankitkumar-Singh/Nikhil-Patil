@model IEnumerable<Assignment_3_4.Models.Employee>

@{
    ViewBag.Title = "Employee List";
}

<div class="container text-center mt-5">
    <h2>Employee List</h2>

    <div class="float-right btn">
        @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-outline-primary" })
    </div>
    <table class="table table-striped table-hover shadow">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Gender)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.City)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateOfBirth)
            </th>
            <th>
                operations
            </th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Gender)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.City)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DateOfBirth)
                </td>
                <td>
                    @Html.ActionLink("EDIT", "Edit", "Employee", new { id = item.Id }, new { @class = "btn btn-outline-warning float-left" })
                    @using (Html.BeginForm("Delete", "Employee", new { id = item.Id }))
                    {
                        <input type="submit" value="DELETE" class="btn btn-outline-danger" onclick="return confirm('Are you want to delete employee record of @item.Name');"/>
                    }
                </td>
            </tr>
        }

    </table>
</div>