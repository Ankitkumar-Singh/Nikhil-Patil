@model IEnumerable<Assignment_2.Models.Employee>

@using Assignment_2.Models;

@{
    ViewBag.Title = "Employee List";
}

<div class="container text-center mt-5">

    <h2>Employee List</h2>
    <div class="col-md-8 offset-md-2 mt-5">
        <table class="table table-striped shadow table-hover">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Gender)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.City)
                </th>
            </tr>

            @foreach (Employee employee in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => employee.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => employee.Gender)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => employee.City)
                    </td>
                </tr>
            }

        </table>
    </div>

    <div>
        @Html.ActionLink("Back to Department List", "Index", "Employee")
    </div>
</div>